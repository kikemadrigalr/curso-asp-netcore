@model IEnumerable<Curso>

@{
    ViewData["Title"] = "Información de Cursos";
    Layout = "Simple";
}
@* Aqui va el html de nuestra vista *@
@* Aca podemos consumir los datos del modelo que se esta pasando a la vista *@
@* <h1>@ViewData["Title"]</h1>
<h2>Nombre: @Model.Nombre </h2> *@

<h1>@ViewData["Title"]</h1>
<section>
  <div class="add">
    @* <button type="button" class="btn btn-primary">Agregar</button> *@
    <a class="btn btn-primary"  asp-controller="Curso" asp-action="Create">Agregar</a>
  </div>

  <div class="info">
    <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Unique ID</th>
      <th scope="col">Dirección</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var curso in Model)
    {
      <tr>
        <td>@curso.Nombre</td>
        <td>@curso.Id</td>
        <td>@curso.Direccion</td>
        <td>
           <a class="btn btn-warning" href="~/Curso/@curso.Id">Detalles</a>
          @* <button type="button" class="btn btn-success">Editar</button> *@
          <a class="btn btn-success"  href="~/Curso/Update/@curso.Id">Editar</a>
          @* <button type="button" class="btn btn-danger" asp-controller="Curso" asp-action="Delete" asp-route-id="@curso.Id">Eliminar</button> *@
          <a class="btn btn-danger"  asp-controller="Curso" asp-controller="Delete" asp-route-id="@curso.Id">Eliminar</a>
        </td>
      </tr>
    }
      @* partial es un taghelper de netcore
      que permite llamar y renderiazar vistas parciales
      asignndole la vista a mostrar y especificar un modelo de ser nesesario
      si no se pasa dicho modelo ella entiende que va a trabajar 
      con el modelo de la vista que la invocò *@

      @* @foreach (var curso in Model)
      { 
        <partial name="ObjetoEscuelaSimple" model="curso"/>
      } *@

  </tbody>
</table>
  </div>
</section>


