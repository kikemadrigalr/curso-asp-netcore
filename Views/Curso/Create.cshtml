@using curso_asp_netcore.Models
@model Curso

@{
    ViewData["Title"] = "Crear un Curso";
    Layout = "Simple";
}

@* Aqui va el html de nuestra vista *@
@* Aca podemos consumir los datos del modelo que se esta pasando a la vista *@
@* <h1>@ViewData["Title"]</h1>
<h2>Nombre: @Model.Nombre </h2> *@

<h1>@ViewData["Title"]</h1>

<section>
  <div class="text-danger" asp-validation-summary="All"></div>
  <form method="POST">
    <div class="mb-3">
      <label asp-for="Nombre" class="form-label"></label>
      <input type="text" class="form-control" asp-for="Nombre" id="Nombre" data-val="true" data-val-required="Por Favor Ingrese el Nombre del Alumno" >
      <span class="field-validation-valid bg-danger text-white" data-valmsg-for="Nombre" data-valmsg-replace="true"></span>
    </div>
    <div class="mb-3">
      <label asp-for="Direccion" class="form-label"></label>
      <input type="text" class="form-control" asp-for="Direccion" id="Direccion"  data-val="true" data-val-required="Debe Ingresar una dirección valida">
      <span class="field-validation-valid bg-danger text-white" data-valmsg-for="Direccion" data-valmsg-replace="true"></span>
    </div>

    <div class="mb-3">
      <label asp-for="Jornada" class="form-label">Jornada</label>
      @Html.DropDownList(
        "Jornada", 
        Html.GetEnumSelectList<TiposJornada>(),
        "Seleccione Una Jornada",
        new {@class = "form-control"}
        )
        <span class="field-validation-valid bg-danger text-white" data-valmsg-for="Jornada" data-valmsg-replace="true"></span>
    </div>


  
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</section>

