@using curso_asp_netcore.Models
@model Curso

@{
    ViewData["Title"] = "Editar Curso";
    Layout = "Simple";
}

@* Aqui va el html de nuestra vista *@
@* Aca podemos consumir los datos del modelo que se esta pasando a la vista *@
@* <h1>@ViewData["Title"]</h1>
<h2>Nombre: @Model.Nombre </h2> *@

<h1>@ViewData["Title"]</h1>

<section>
  <div class="text-danger" asp-validation-summary="All"></div>
  <form method="POST">
    <div class="mb-3">
      <label asp-for="Id" class="form-label">Unique ID</label>
      <input type="text" class="form-control" asp-for="Id" id="Id" disabled>
    </div>

    <div class="mb-3">
      <label asp-for="Nombre" class="form-label">Nombre</label>
      <input type="text" class="form-control" asp-for="Nombre" id="Nombre" >
    </div>

    <div class="mb-3">
      <label asp-for="Direccion" class="form-label">Dirección</label>
      <input type="text" class="form-control" id="Direccion" asp-for="Direccion">
    </div>

    <div class="mb-3">
      <label asp-for="Jornada" class="form-label">Jornada</label>
      @Html.DropDownList(
        "Jornada", 
        Html.GetEnumSelectList<TiposJornada>(),
        "Seleccione Una Jornada",
        new {@class = "form-control"}
        )
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</section>

